<%- include("partials/header.ejs") %>

<body>
  <div class="titleBlock">
    <img class="logo" src="https://cdn.onlinewebfonts.com/svg/img_81173.svg" alt="Dashboard icon">
    <h1>DashBoardSG</h1>
  </div>

  <div class="container text-center">
    <div class="row align-items-center">
      <% Object.keys(selectedDash).forEach(key => { %>
        <div class="card col-xs col-sm-4 col-md-2 col">
          <strong><%= selectedDash[key].title %></strong>
          <% if (selectedDash[key].value.length > 10) { %>
            <div class="value" style="font-size: 1.2em;"><%= selectedDash[key].value %></div>
          <% } else if (selectedDash[key].value.length > 5) { %>
            <div class="value" style="font-size: 1.6em;"><%= selectedDash[key].value %></div>
          <% } else { %>
            <div class="value" style="font-size: 2em;"><%= selectedDash[key].value %></div>
          <% } %>
          <div class="unit"><%= selectedDash[key].location %> <%= selectedDash[key].timeValid %></div>
        </div>
      <% }) %>
    </div>
  </div>
</body>

<%- include("partials/footer.ejs") %>
